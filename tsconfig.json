{
	"compilerOptions": {
		"target": "ES2020",
		"declaration": true,
		"moduleResolution": "Bundler",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"types": [
			"reflect-metadata",
			"jest"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.mts",
		"src/**/*.test.ts"
	],
}