{
	"compileOnSave": true,
	"compilerOptions": {
		"strict": true,
		"target": "es2015",
		"lib": [
			"es6"
		],
		"types": [
			"reflect-metadata"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"declaration": true,
		"inlineSourceMap": false,
		"outDir": "dist"
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}