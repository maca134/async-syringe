{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"lib": [
			"es6"
		],
		"types": [
			"reflect-metadata"
		],
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"alwaysStrict": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"outDir": "dist",
		"stripInternal": true,
		"moduleResolution": "node",
		"importHelpers": true
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./node_modules",
		"./src/**/*.test.ts"
	]
}