{
	"rootDir": ".",
	"clearMocks": true,
	"coverageDirectory": "coverage",
	"collectCoverageFrom": ["src/**/*.ts"],
	"coveragePathIgnorePatterns": [
		"/node_modules/",
		"examples",
		"types\\.ts",
		"index\\.ts",
		".+\\.d\\.ts",
		"\\.spec\\.ts"
	],
	"globals": {
		"ts-jest": {
			"tsConfig": "tsconfig.test.json"
		}
	},
	"testMatch": ["**/src/**/*.spec.ts"],
	"moduleFileExtensions": ["ts", "tsx", "js"],
	"testEnvironment": "node",
	"transform": {
		"^.+\\.tsx?$": "ts-jest"
	}
}